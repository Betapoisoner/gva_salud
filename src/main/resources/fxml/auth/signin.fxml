<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.auth.SignInController"
            style="-fx-background-color: #ebebeb;" 
            prefHeight="400" prefWidth="600">

    <VBox alignment="CENTER" spacing="20" 
          AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150">
        
        <Text text="Sign In" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2e75b2;"/>
        
        <TextField fx:id="emailField" promptText="Email" 
                   style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <PasswordField fx:id="passwordField" promptText="Password" 
                       style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        
        <Button text="Sign In" fx:id="signInButton" 
                style="-fx-font-size: 14; -fx-pref-width: 200; -fx-background-color: #2e75b2; -fx-text-fill: white;"/>
        
        <HBox alignment="CENTER" spacing="10">
            <Text text="Don't have an account?" fill="#1a1d1a"/>
            <Hyperlink fx:id="signUpLink" text="Create one" textFill="#d5573b"/>
        </HBox>
        
    </VBox>

</AnchorPane>