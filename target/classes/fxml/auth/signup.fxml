<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.auth.SignUpController"
            style="-fx-background-color: #ebebeb;" 
            prefHeight="400" prefWidth="600">

    <VBox alignment="CENTER" spacing="20" 
          AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">
        
        <Text text="Sign Up" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2e75b2;"/>
        
        <TextField fx:id="nameField" promptText="Name" 
                   style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <TextField fx:id="surnameField" promptText="Surname" 
                   style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <TextField fx:id="emailField" promptText="Email" 
                   style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <TextField fx:id="phoneField" promptText="Phone" 
                   style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <TextField fx:id="dniField" promptText="DNI" 
                   style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <PasswordField fx:id="passwordField" promptText="Password" 
                       style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" 
                       style="-fx-background-color: #ebebeb; -fx-border-color: #2e75b2; -fx-border-radius: 5;"/>
        
        <Button text="Sign Up" fx:id="signUpButton" 
                style="-fx-font-size: 14; -fx-pref-width: 200; -fx-background-color: #2e75b2; -fx-text-fill: white;"/>
        
        <HBox alignment="CENTER" spacing="10">
            <Text text="Already have an account?" fill="#1a1d1a"/>
            <Hyperlink fx:id="signInLink" text="Sign In" textFill="#d5573b"/>
        </HBox>
        
    </VBox>

</AnchorPane>